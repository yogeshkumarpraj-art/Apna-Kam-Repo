rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for fetching worker/user profiles.
    // Restrict write access to the user themselves.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Allow logged-in users to create, read, and write bookings.
    // Further rules can be added to restrict updates/deletes to involved parties.
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }
  }
}
