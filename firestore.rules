
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read from the users collection, but only write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow logged-in users to create, read, and write bookings.
    // In a production app, you'd make these rules more granular (e.g., a user can only read/write their own bookings).
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }
  }
}
