
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This allows anyone to view profile pictures and portfolio images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write (create, update, delete) to their own user-specific folders.
    // The path is structured as /avatar/{userId}/{fileName} or /portfolio/{userId}/{fileName}.
    // This rule ensures that a user can only manage their own files.
    match /{imageType}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
