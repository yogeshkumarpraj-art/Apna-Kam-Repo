rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatars: Publicly readable, but only the user can write their own avatar.
    match /avatar/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Portfolio: Publicly readable, but only the user can write to their own portfolio.
    match /portfolio/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
